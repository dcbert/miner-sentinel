# ===== DEPLOYMENT CONFIGURATION =====
# Docker Registry (for production deployment)
REGISTRY_URL=your-registry.com:5000
VERSION=1.0.0

# ===== DATABASE CONFIGURATION =====
# MinerSentinel Main Database
POSTGRES_DB=minersentinel
POSTGRES_USER=minersentinel
POSTGRES_PASSWORD=changeme_secure_password_minimum_16_chars
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ===== DJANGO BACKEND =====
SECRET_KEY=generate-a-50-char-random-string-for-production-use-django-secret-key-generator
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com,your-server-ip
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# ===== DATA SERVICE CONFIGURATION =====
# Polling Configuration
POLLING_INTERVAL_MINUTES=15
DEVICE_CHECK_INTERVAL_MINUTES=5

# Frontend
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
